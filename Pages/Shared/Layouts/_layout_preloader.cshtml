<!DOCTYPE html>
<html lang="en">

<head>

    @Html.Partial("~/Pages/Shared/_title_meta.cshtml")
    @Html.Partial("~/Pages/Shared/_head_css.cshtml")

</head>

<body data-topbar="dark" data-layout="horizontal">

    <!-- Loader -->
    <div id="preloader">
        <div id="status">
            <div class="spinner-chase">
                <div class="chase-dot"></div>
                <div class="chase-dot"></div>
                <div class="chase-dot"></div>
                <div class="chase-dot"></div>
                <div class="chase-dot"></div>
                <div class="chase-dot"></div>
            </div>
        </div>
    </div>

    <!-- Begin page -->
    <div id="layout-wrapper">
        @Html.Partial("~/Pages/Shared/_horizontal.cshtml")

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->

        <div class="main-content">
            <div class="page-content">
                <div class="container-fluid">
                    @Html.Partial("~/Pages/Shared/_page_title.cshtml")

                    @RenderBody()
                </div> <!-- container-fluid -->
            </div>
            <!-- End Page-content -->

            @Html.Partial("~/Pages/Shared/_footer.cshtml")
        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->

    @RenderSection("externalhtml", required: false)

    @Html.Partial("~/Pages/Shared/_right_sidebar.cshtml")

    @Html.Partial("~/Pages/Shared/_vendor_scripts.cshtml")

    @RenderSection("scripts", required: false)


</body>

</html>

